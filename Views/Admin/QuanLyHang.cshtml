        //     const hotenInput = $("thead tr:nth-child(1) th:nth-child(2) input");

        //     const mahang = getValueOrEmpty(tenctkInput.val());
        //     const tenhang = getValueOrEmpty(hotenInput.val());
        //     // Tạo đường dẫn đến action QuanLyDM trong controller
