                                            }
                                        </tbody>                                      
                                    </table>
                                    <script>
                                        $(document).ready(function () {
                                            // Khởi tạo DataTable
                                            var table = $('#example1').DataTable({
                                                "responsive": true,
                                                "lengthChange": false,
                                                "autoWidth": false,
                                                "paging": false,
                                                "info": false,
                                                "searching": true,  // Kích hoạt tìm kiếm
