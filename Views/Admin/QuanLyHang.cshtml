                                </div>
                               
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                           
                                            <tr>
                                                <th>Mã hãng</th>
                                                <th>Tên hãng</th>
                                                <th>Sửa hãng</th>
                                                <th>Xóa hãng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.MaHang</td>
                                                    <td>@item.TenHang</td>
                                                    @if (qh.MaA != 2)
                                                    {
                                                        <td><a href="@Url.Action("SuaHang","Admin",new { id = item.MaHang})" class="btn btn-success">Chỉnh sửa</a></td>
